@model IEnumerable<PapaizInc.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
}

<h2>Funcionários</h2>

<p>
    <a asp-action="Create">Cadastrar Funcionário</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefones)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Identidade)
                </th>
                <th>
                    Carteira de Trabalho
                </th>
                <th>
                    Salário
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motorista)
                </th>
                <th>
                    Técnico
                </th>
                <th>
                    Observações
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarteiraDeTrabalho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motorista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacoes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID"><span title="Editar" class="glyphicon glyphicon-edit"></span></a> |
                <a asp-action="Details" asp-route-id="@item.ID"><span title="Detalhes" class="glyphicon glyphicon-list"></span></a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
