@model PapaizInc.Models.Funcionario

@{
    ViewData["Title"] = "Novo Funcionário";
}

<h2>Cadastrar Funcionário</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefones" class="control-label"></label>
                <input asp-for="Telefones" class="form-control" />
                <span asp-validation-for="Telefones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Identidade" class="control-label"></label>
                <input asp-for="Identidade" class="form-control" />
                <span asp-validation-for="Identidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarteiraDeTrabalho" class="control-label">Carteira De Trabalho</label>
                <input asp-for="CarteiraDeTrabalho" class="form-control" />
                <span asp-validation-for="CarteiraDeTrabalho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label">Salário</label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Motorista" /> @Html.DisplayNameFor(model => model.Motorista)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Tecnico" /> Técnico
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label">Observações</label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
